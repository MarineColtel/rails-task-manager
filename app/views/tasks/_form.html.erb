<%= form_with model: task do |f| %>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control mb-2" %>
  <%= f.label :details, class: "form-label" %>
  <%= f.text_field :details, class: "form-control mb-2" %>
  <% if task.persisted?  %>
    <div class="form-check">
      <%= f.label :completed, class: "form-check-label", value: "Mark this task as complete" %>
      <%= f.check_box :completed, class: "form-check-input" %>
    </div>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
